{
    "name": "Refocus",
    "description": "Helps users not waste time by automatically closing time-wasting pages after a set period",
    "version": "0.3",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "alarms",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    }
}